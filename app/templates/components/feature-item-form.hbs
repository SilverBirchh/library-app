<div class="form-horizontal">
  <div class="form-group has-feedback {{if item.isValid 'has-success'}}">
    <label class="col-sm-2 control-label">Name*</label>
    <div class="col-sm-10">
      {{input type="text" value=item.name class="form-control" placeholder="The name of the feature"}}
      {{#if item.isValid}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Description</label>
    <div class="col-sm-10">
      {{input type="text" value=item.description class="form-control" placeholder="The address of the feature"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Contact</label>
    <div class="col-sm-10">
      {{input type="text" value=item.contact class="form-control" placeholder="The Contact for the feature"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'buttonClicked' item}} disabled="{{unless item.isValid 'disabled'}}">{{buttonLabel}}</button>
    </div>
  </div>
</div>
