<h2>Edit Feature</h2>

<div class="form-horizontal">
  <div class="form-group">
      <label class="col-sm-2 control-label">Name</label>
      <div class="col-sm-10">
          {{input type="text" value=model.name class="form-control" placeholder="The name of the feature"}}
      </div>
  </div>
  <div class="form-group">
      <label class="col-sm-2 control-label">Description</label>
      <div class="col-sm-10">
          {{input type="text" value=model.description class="form-control" placeholder="The description of the feature"}}
      </div>
  </div>
  <div class="form-group">
      <label class="col-sm-2 control-label">Contact</label>
      <div class="col-sm-10">
          {{input type="text" value=model.contact class="form-control" placeholder="The contact for the feature"}}
      </div>
  </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default" {{action 'saveFeature' model}}>Save changes</button>
        </div>
    </div>
</div>
