<h2>List</h2>

<div class="row">
  {{#each model as |feature|}}
    <div class="col-md-4">
      <div class="panel panel-default library-item">
          <div class="panel-heading">
              <h3 class="panel-title">{{feature.name}}</h3>
          </div>
          <div class="panel-body">
            <p>Description: {{feature.description}}</p>
            <p>Contact: {{feature.contact}}</p>
          </div>
          <div class="panel-footer text-right">
              {{#link-to 'features.edit' feature.id class='btn btn-success btn-xs'}}Edit{{/link-to}}
              <button class="btn btn-danger btn-xs" {{action 'deleteFeature' feature}}>Delete</button>
          </div>
      </div>
    </div>
  {{/each}}
</div>
