<h1>Contact us</h1>

{{#if thankYouMessage}}
  {{{thankYouMessage}}}
{{else}}

        <p class="well well-sm">If you have any questions, feedback or requests for the platform please leave a message with your email address.</p>
        <div class="row">
            <div class="col-md-6">


                <div class="form-group has-feedback {{if validEmail 'has-success'}}">
                    <label>Your email address*:</label>
                    {{input type="email" value=emailAddress class="form-control" placeholder="Please type your e-mail address." autofocus="autofocus"}}
                    {{#if validEmail}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
                </div>
                <div class="form-group has-feedback {{if validMessage 'has-success'}}">
                    <label>Your message*:</label>
                    {{textarea class="form-control" placeholder="Your message. (At least 5 characters.)" rows="7" value=responseMessage}}
                    {{#if validMessage}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
                </div>
                <button  {{action 'saveInvitation'}} disabled={{isDisabled}} class="btn btn-success" disabled="" data-ember-action="548">Send</button>

            </div>
        </div>
{{/if}}
