<h1>Search</h1>

<div class="row">
  <div class="col-lg-6">
    <div class="input-group">
      <div class="form-group has-feedback {{if validSearch 'has-success'}}">
        {{input type="text" value=market class="form-control" placeholder="Market" autofocus="autofocus"}}
      </div>
      <span class="input-group-btn">
        <button {{action 'search'}} disabled={{isDisabled}} class="btn btn-default" type="button" id="search">Go!</button>
      </span>
    </div>
    <!-- /input-group -->
  </div>
  <!-- /.col-lg-6 -->
</div>
<hr>
<div class="container col-lg-8">
  <table class="table table-hover" id="search_results_list">
    <thead>
      <tr>
        <th>Status</th>
        <th>Market</th>
        <th>Expiry</th>
        <th>Bid</th>
        <th>Offer</th>
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
</div>
<!-- /.row -->
